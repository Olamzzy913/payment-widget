{
  "name": "payment-widget-sdk",
  "type": "module",
  "scripts": {
    "dev:iframe": "vite --config vite.iframe.config.js",
    "build:iframe": "vite build --config vite.iframe.config.js",
    "build:sdk": "vite build --config vite.sdk.config.js",
    "build:all": "npm run build:sdk && npm run build:iframe",
    "prebuild": "rm -rf dist && mkdir -p dist",
    "build": "npm run prebuild && npm run build:all",
    "preview:iframe": "vite preview --config vite.iframe.config.js --port 3001"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "vue": "^3.3.0"
  }
}